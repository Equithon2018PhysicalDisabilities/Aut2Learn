<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontScreenActivity"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:corner_radius="10dp"
        android:layout_marginBottom="16dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/roundedimage"
            android:scaleType="center"
            android:src="@drawable/screenshot" >
        </ImageView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="BEDTIME ROUTINE"
            android:textAlignment="center"
            android:textSize="40px"
            android:textStyle="bold"
            />

    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:corner_radius="10dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:src="@drawable/full"
                android:scaleType="center"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="SITUATIONAL GAMES"
                android:textAlignment="center"
                android:textSize="40px"
                android:textStyle="bold"
                />
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:corner_radius="10dp"
            android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:src="@drawable/talk"
            android:scaleType="center"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="GESTURE GAMES"
                android:textAlignment="center"
                android:textSize="40px"
                android:textStyle="bold"
                android:paddingBottom="100px"
                />
        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    </LinearLayout>
</ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemTextColor="#ffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation">
    </android.support.design.widget.BottomNavigationView>



</android.support.constraint.ConstraintLayout>
