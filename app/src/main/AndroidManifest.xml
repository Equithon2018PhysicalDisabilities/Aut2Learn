<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smavehyiashahid.equithon">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FrontPage">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FrontScreenActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".GuardiansPageActivity" />
        <activity
            android:name=".ChildProfileActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".TrophyActivity"
            android:label="@string/title_activity_trophy" />
        <activity
            android:name=".BedtimeRoutine"
            android:label="@string/title_activity_bedtime_routine"
            android:theme="@style/FrontPage"></activity>
    </application>

</manifest>